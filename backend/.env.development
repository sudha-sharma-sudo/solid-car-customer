# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:8000
API_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/solid-car

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=24h

# Email Configuration (using Mailtrap for development)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your-mailtrap-user
EMAIL_PASS=your-mailtrap-password
EMAIL_FROM=Solid Car <noreply@solidcar.com>

# Security Configuration
LOGIN_WINDOW_MS=900000  # 15 minutes in milliseconds
MAX_LOGIN_ATTEMPTS=5
BCRYPT_ROUNDS=10

# File Upload Configuration
MAX_FILE_SIZE=5mb

# Logging Configuration
LOG_LEVEL=info

# Cache Configuration
CACHE_TTL=3600        # 1 hour in seconds
CACHE_CHECK_PERIOD=600 # 10 minutes in seconds

# Feature Flags
FEATURE_EMAIL_VERIFICATION=true
FEATURE_SOCIAL_LOGIN=false
MAINTENANCE_MODE=false

# Business Rules
MAX_ACTIVE_BOOKINGS=3
MIN_ADVANCE_BOOKING_HOURS=24
MAX_ADVANCE_BOOKING_DAYS=30
POINTS_PER_BOOKING=100

# Social Login (if enabled)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Payment Integration (for future use)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Redis Configuration (for future use)
REDIS_URL=redis://localhost:6379

# AWS Configuration (for future use)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=your-aws-region
AWS_S3_BUCKET=your-s3-bucket-name
