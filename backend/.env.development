# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:8000
API_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/solid-car

# JWT Configuration
JWT_SECRET=dev-secret-key-123
JWT_EXPIRES_IN=24h

# Email Configuration (using Mailtrap for development)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=development
EMAIL_PASS=development
EMAIL_FROM=Solid Car <noreply@solidcar.com>

# Security Configuration
LOGIN_WINDOW_MS=900000
MAX_LOGIN_ATTEMPTS=5
BCRYPT_ROUNDS=10

# File Upload Configuration
MAX_FILE_SIZE=5mb

# Logging Configuration
LOG_LEVEL=debug

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Feature Flags
FEATURE_EMAIL_VERIFICATION=false
FEATURE_SOCIAL_LOGIN=false
MAINTENANCE_MODE=false

# Business Rules
MAX_ACTIVE_BOOKINGS=3
MIN_ADVANCE_BOOKING_HOURS=24
MAX_ADVANCE_BOOKING_DAYS=30
POINTS_PER_BOOKING=100
